{
  "$id": "gts.x.core.mcp.tools.v1.0~x.core.mcp.filesystem.v1.0~",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MCP Filesystem Tools",
  "type": "object",
  "description": "MCP tools for filesystem operations including read/write files, directory management, and file search",
  "allOf": [
    { "$ref": "gts.x.core.mcp.tools.v1.0~" },
    {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": {
          "const": "gts.x.core.mcp.tools.v1.0~x.core.mcp.filesystem.v1.0~",
          "$comment": "The value is required only for IDE-side validation"
        },
        "name": {
          "enum": [
            "read_text_file",
            "read_media_file",
            "read_multiple_files",
            "write_file",
            "edit_file",
            "create_directory",
            "list_directory",
            "list_directory_with_sizes",
            "directory_tree",
            "move_file",
            "search_files",
            "get_file_info",
            "list_allowed_directories"
          ]
        },
        "description": {
          "type": "string"
        },
        "inputSchema": {
          "type": "object"
        }
      }
    }
  ]
}
